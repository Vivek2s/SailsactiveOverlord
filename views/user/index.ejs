<div class="container">
	<h3>Users</h3>
	<table class="table">
		<tr>
		<th>ID</th>
		<th>Name</th>
		<th>UserName</th>
		<th></th>
		<th></th>
		<th></th>

		<% _.each(user, function(user){ %>
		<tr data-id="<%= user.id %>" data-model="user">
			<td><%= user.id %></td>
			<td><%= user.name %></td>
			<td><%= user.username %></td>
			<td><a class="btn btn-sm btn-primary" href="/user/show/<%= user.id %>">Show</a></td>
			<td><a class="btn btn-sm btn-warning" href="/user/edit/<%= user.id %>">Edit</a></td>
			<td>
			<form action="/user/destroy/<%= user.id %>" method="POST">
			<input type="hidden" name="_method" value="delete"> 
			<input type="submit" class="btn btn-sm btn-danger" value="Delete">
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
			</form>
			</td>
		</tr>

		<%	}) %>
	</table>
</div>